#:kivy 1.7.2

<VibrationExplorer>:
    orientation: 'vertical'
    Label:
        text: 'Vibration Explorer'
    BoxLayout:
        orientation: 'horizontal'
        Label:
            text: 'Pattern:'
        TextInput:
            id: p_on
            multiline: False
            text: '1000'
        TextInput:
            id: p_off
            multiline: False
            text: '1000'
        TextInput:
            id:p_repeat
            multiline: False
            text: '1'
    BoxLayout:
        orientation: 'horizontal'
        Label:
            text: 'Repeat:'
        TextInput:
            multiline: False
            text: '-1'
    Button:
        text: 'Try It'
        on_press: root.do_vibrate('0,'+((p_on.text+','+p_off.text+',')*int(p_repeat.text))[:-1])

