#:kivy 1.7.2

<VibrationExplorer>:
    orientation: 'vertical'
    Label:
        text: 'Vibration Explorer'
    BoxLayout:
        orientation: 'horizontal'
        Label:
            text: 'Pattern:'
        TextInput:
            id: pattern
            multiline: False
            text: '0,'
    BoxLayout:
        orientation: 'horizontal'
        Label:
            text: 'Repeat:'
        TextInput:
            multiline: False
            text: '-1'
    Button:
        text: 'Try It'
        on_press: root.do_vibrate(pattern.text)

